# Use official Node.js image
FROM node:20

# Set work directory
WORKDIR /app

# Copy package.json and package-lock.json first (optimizes layer caching)
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy rest of the project files
COPY . .

# Generate and apply migrations (Drizzle ORM)
RUN npx drizzle-kit generate
RUN npx drizzle-kit migrate

# Expose default Next.js port
EXPOSE 3000

# Start the Next.js app
CMD ["npm", "run", "dev"]
